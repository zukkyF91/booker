<h1>投稿編集</h1>

<%= form_with(model: @book, url: book_path(@book), method: :patch) do |form| %>

  <div>

    <%= form.label :title %>

    <%= form.text_field :title %>

  </div>

  <div>

    <%= form.label :body %>

    <%= form.text_area :body %>

  </div>

  <%= form.submit "更新" %>

<% end %>
<%= link_to "Show",book_path(@book.id) %>
<%= link_to 'back', books_path %> 